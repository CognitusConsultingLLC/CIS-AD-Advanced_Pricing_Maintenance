<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
	<ResponsivePopover
		id="myFooterPopover"
		title="Color Legend"
		class="sapUiContentPadding"
		placement="Bottom"
		contentWidth="320px"
		horizontalScrolling="false">
        <beginButton>
			<Button text="Ok" press="handleCloseButton" />
		</beginButton>
		<content>
				
   <List items="{/xCGDCxC_CNCColorLegendCustom}">
  <CustomListItem>
    <l:VerticalLayout class="sapUiResponsiveContentPadding" width="100%">
      <ObjectStatus
        text="{Text}"
        state="{Severity}" />
    </l:VerticalLayout>
  </CustomListItem>
</List>

		</content>
	</ResponsivePopover>
</core:FragmentDefinition>